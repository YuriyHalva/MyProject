<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/imageternopil2"
    tools:context="com.example.android.myproject.Main2Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/ContentsMain"
            android:text="@string/contents"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/Contents"
            android:text="@string/square"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/Contents"
            android:text="@string/castle"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/Contents"
            android:text="@string/venetian"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/Contents"
            android:text="@string/pond"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/Contents"
            android:text="@string/boast"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/Contents"
            android:text="@string/champs"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/go3Activity"
        android:background="@drawable/blafibuttonright"
        android:onClick=""/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/backActivity"
        android:background="@drawable/blafibuttonleft"
        android:onClick=""/>

</RelativeLayout>